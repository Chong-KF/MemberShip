@page
@model MemberShip.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Member.ID" />
            <div class="form-group">
                <label asp-for="Member.Salutation" class="control-label"></label>
                <select asp-for="Member.Salutation" class="form-control" asp-items="ViewBag.Salutation"></select>
                <span asp-validation-for="Member.Salutation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.FullName" class="control-label"></label>
                <input asp-for="Member.FullName" class="form-control" />
                <span asp-validation-for="Member.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.DOB" class="control-label"></label>
                <input asp-for="Member.DOB" class="form-control" type="date" />
                <span asp-validation-for="Member.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Gender" class="control-label"></label>
                <select asp-for="Member.Gender" class="form-control" asp-items="ViewBag.Gender"></select>
                <span asp-validation-for="Member.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Mobile" class="control-label"></label>
                <input asp-for="Member.Mobile" class="form-control" />
                <span asp-validation-for="Member.Mobile" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
