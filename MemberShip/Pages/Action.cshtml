@page
@model MemberShip.Pages.ActionModel

@{
    ViewData["Title"] = "Action";
}

<h1>Action</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Member.ID" />
        <input type="hidden" asp-for="Member.Rejected" />
        <input type="hidden" asp-for="Member.MemberShipID" />
        <input type="hidden" asp-for="Member.DateCreated" />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.Salutation)
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Member.Salutation" class="form-control" asp-items="ViewBag.Salutation"></select>
                <span asp-validation-for="Member.Salutation" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.FullName)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Member.FullName" class="form-control" />
                <span asp-validation-for="Member.FullName" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.DOB)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Member.DOB" class="form-control" type="date" />
                <span asp-validation-for="Member.DOB" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.Gender)
            </dt>
            <dd class="col-sm-10">
                <select asp-for="Member.Gender" class="form-control" asp-items="ViewBag.Gender"></select>
                <span asp-validation-for="Member.Gender" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.Mobile)
            </dt>
            <dd class="col-sm-10">
                <input asp-for="Member.Mobile" class="form-control" />
                <span asp-validation-for="Member.Mobile" class="text-danger"></span>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.Rejected)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Member.Rejected)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.MemberShipID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Member.MemberShipID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Member.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Member.DateCreated)
            </dd>
        </dl>
        <div class="form-group">
            <label asp-for="Member.Comment" class="control-label"></label>
            <textarea asp-for="Member.Comment" class="form-control"></textarea>
            <span asp-validation-for="Member.Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Approve" name="action" />
            <input class="btn btn-danger" type="submit" value="Reject" name="action" />
        </div>
    </form>
</div>

<div>
    <a asp-page="Pending">Back to Pending</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
